    <div class="row">
      <div class="col-4">
        <img class="w-100 post_img" src="<%= @post.nested_files %>">
      </div>

      <div class="col-8">
        <h3 class="row justify-content-center"><%= @post.title %></h3>
        <p><%= @post.body %></p>
      </div>
    </div><br />
<hr>
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-outline-warning' %>
<%= link_to "Destroy", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-outline-danger' %>