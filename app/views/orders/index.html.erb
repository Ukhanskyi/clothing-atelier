<!-- <%= react_component 'Orders', current_user: current_user %> -->

<h2 class="row justify-content-center"> Your orders </h2>
<% if current_user.admin? %>

  <% @orders.each do |order| %>	
    <hr>	
    <div class="alert alert-light">	
      <h3><b>Customer: <%= order.surname %> <%= order.name %></b></h3>	
      <p><b>Email:</b> <%= order.email %></p>
      <p><b>Phone:</b> <%= order.phone %></p>	
      <p><b>Clothing name:</b> <%= order.detail.clothing_name%></p>	
      <p><b>Size: </b><%= order.detail.size%></p>	
      <div class="btn-group">	
        <%= link_to "Show order", order_path(order), class: 'btn btn-outline-primary'  %>	
        <%= button_to "Confirm order", confirm_order_path(order), class: 'btn btn-outline-primary ml-1' %>
        <%= button_to "Start tailoring this order", tailoring_start_order_path(order), class: 'btn btn-outline-primary ml-1' %>
        <%= button_to "Finish tailoring this order", tailoring_finish_order_path(order), class: 'btn btn-outline-primary ml-1' %>
        <%= button_to "Send order to user", move_to_you_order_path(order), class: 'btn btn-outline-primary ml-1' %>
      </div>	
      <hr>	
    </div>	
  <% end %>

<% else %>

  <% current_user.orders.each do |order| %>	
    <hr>	
    <div class="alert alert-light">	
      <h3><b>Customer: <%= order.surname %> <%= order.name %></b></h3>	
      <p><b>Email:</b> <%= order.email %></p>
      <p><b>Phone:</b> <%= order.phone %></p>	
      <p><b>Clothing name:</b> <%= order.detail.clothing_name%></p>	
      <p><b>Size: </b><%= order.detail.size%></p>
      
      <div class="btn-group">	
        <%= link_to "Show order", order_path(order), class: 'btn btn-outline-primary'  %>	
        <%= button_to "Confirm order", confirm_order_path(order), class: 'btn btn-outline-primary ml-1' %>
        <% if current_user.admin? %>
          <%= button_to "Start tailoring this order", tailoring_start_order_path(order), class: 'btn btn-outline-primary ml-1' %>
          <%= button_to "Finish tailoring this order", tailoring_finish_order_path(order), class: 'btn btn-outline-primary ml-1' %>
          <%= button_to "Send order to user", move_to_you_order_path(order), class: 'btn btn-outline-primary ml-1' %>
        <% end %>
      </div>	
      <hr>	
    </div>	
  <% end %>

<% end %>
