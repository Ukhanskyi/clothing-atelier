<div class="content w-50 p-3">
  <h2>Log in</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
      <%= f.label :email %><br />
      <%= f.email_field(:email, {:class => 'form-control'}) %>
    </div>

    <div class="container">
      <%= f.label :password %><br />
      <%= f.password_field(:password, {:class => 'form-control'}) %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="container">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="container">
      <%= f.submit("Log in", {:class => 'btn btn-outline-primary mt-2'})%>
    </div>
    <hr>
  <% end %>

  <%= render "devise/shared/links" %>
</div>