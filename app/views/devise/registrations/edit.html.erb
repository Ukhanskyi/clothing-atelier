<div class="content w-75 p-3">
  <h2 class="mt-3 text-center">Profile <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :name %><br />
    <%= f.text_field(:name, { class: 'form-control' }) %><br>

    <%= f.label :surname %><br />
    <%= f.text_field(:surname, { class: 'form-control' }) %><br>

    <%= f.label :email %><br />
    <%= f.email_field(:email, { class: 'form-control' }) %><br>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br>
    <%= f.password_field(:password, { class: 'form-control' }) %><br>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>

    <%= f.label :password_confirmation %>
    <%= f.password_field(:password_confirmation, { class: 'form-control' }) %>

    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field(:current_password, { class: 'form-control' }) %>
    <br>

    <%= f.label :gender %><br>
    <%= f.radio_button :gender, 'male' %>
    <%= f.label :gender_male, "Male" %>
    <%= f.radio_button :gender, 'female' %>
    <%= f.label :gender_male, "Female" %>
    <br>

    <%= f.label :phone %><br>
    <%= f.phone_field(:phone, { class: 'form-control' }) %>

    <%= f.label :address %><br>
    <%= f.text_field(:address, { class: 'form-control' }) %>

    <%= f.label :size_clothing %><br>
    <%= f.text_field(:size_clothing, { class: 'form-control' }) %>

    <%= f.submit({ class: 'btn btn-outline-primary mt-2' }) %>
    <hr>

  <% end %>

  <h3 class="mt-3">Cancel my account</h3>

  <h6> Unhappy? You can delete your account.
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-outline-primary mt-2' %>
  </h6>

  <%= link_to "Back", :back %>
</div>